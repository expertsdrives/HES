
@{
    ViewBag.Title = "Dashboard";
}
<style>
    .dx-datagrid {
        color: #333;
        background-color: transparent !important;
    }

    .dx-toolbar {
        background-color: transparent !important;
    }

    .redColor {
        color: red;
    }

    .greenColor {
        color: green;
    }

    @@media only screen and (max-width: 800px) {
        .hidebut {
            display: none !important
        }
    }
</style>
@Html.AntiForgeryToken()
<div class="col-lg-12 col-md-12 col-xl-12">
    <div class="card card-block card-stretch card-height">
        <div class="card-header d-flex justify-content-between  align-items-start ">
            <div class="header-title">
                <h4 class="card-title">AMR assigned details</h4>
            </div>
            <div class="card-header-toolbar d-flex align-items-center hidebut">
                <button type="button" class="btn mb-1 btn-outline-primary">
                    Total Registration <span class="badge badge-primary ml-2">@ViewBag.totalmeter</span>
                </button>
            </div>
            <div class="card-header-toolbar d-flex align-items-center hidebut">
                <button type="button" class="btn mb-1 btn-outline-success">
                    Approved <span class="badge badge-success ml-2">@ViewBag.totalappmeter</span>
                </button>
            </div>
            <div class="card-header-toolbar d-flex align-items-center hidebut">
                <button type="button" class="btn mb-1 btn-outline-danger">
                    Pending <span class="badge badge-danger ml-2">@ViewBag.totalpenmeter</span>
                </button>
            </div>
            <div class="card-header-toolbar d-flex align-items-center">
                <a href="/Home/SelectBusiness" class="btn btn-outline-secondary btn-sm bg-secondary">Add AMR</a>
            </div>
        </div>

        <div class="card-body ">
            <div id="customerDetails"></div>
        </div>
    </div>
</div>
<script>
    var roleid = @Convert.ToString(Session["RoleID"]);
</script>
<script src="~/Scripts/grid/CustomerDetails.js"></script>
