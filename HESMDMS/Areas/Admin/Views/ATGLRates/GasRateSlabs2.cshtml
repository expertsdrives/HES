@{
    ViewBag.Title = "Gas Rate Slabs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-block card-stretch card-height">
    <div class="card-header text-center">
        <h4 class="card-title">Gas Rate Slabs 2</h4>
    </div>

    <div class="card-body">
        <button class="btn btn-primary mb-3" id="openAddGasRateModal">
            <i class="fas fa-plus"></i> Add Gas Rate Slab 2
        </button>

        <div id="GasRateGrid"></div>
    </div>
</div>

<!-- Modal for Adding/Editing Gas Rate -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Gas Rate Slab 2</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="gasRateForm">
                    <input type="hidden" id="GasRateID">

                    <div class="form-group">
                        <label for="GroupName">Select Group Name:</label>
                        <select class="form-control" id="GroupName" required></select>
                    </div>

                    <div class="form-group">
                        <label for="GasRateSlab2">Gas Rate Slab 2</label>
                        <input type="number" step="0.001" class="form-control" id="GasRateSlab2" required>
                    </div>


                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/grid/GasRateSlabs2.js"></script>
