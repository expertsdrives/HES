@{
    ViewBag.Title = "Gas Surcharge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-block card-stretch card-height">
    <div class="card-header text-center">
        <h4 class="card-title">Gas Surcharge</h4>
    </div>

    <div class="card-body">
        <button class="btn btn-primary mb-3" id="openaddGasSurchargeModal">
            <i class="fas fa-plus"></i> Add Gas Surcharge
        </button>

        <div id="GasSurchargeGrid"></div>
    </div>
</div>

<!-- Modal for Add/Edit Gas Quantity Slab -->
<div class="modal fade" id="addGasSurchargeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Gas Surcharge </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="gasSurchargeForm">
                    <input type="hidden" id="GasSurchargeID">

                    <div class="form-group">
                        <label for="GroupName">Select Group Name:</label>
                        <select class="form-control" id="GroupName" required></select>
                    </div>

                    <div class="form-group">
                        <label for="Surcharge">Gas Surcharge:</label>
                        <input type="number" step="0.001" class="form-control" id="Surcharge" required>
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/grid/GasSurcharge.js"></script>
